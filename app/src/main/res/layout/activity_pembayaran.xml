<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.xavier.sapiku.Pembayaran">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/sukses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembelian Sukses"
                    style="@style/CodeFont"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sukses"
                    android:text="Order"
                    style="@style/CodeFont"/>

                <TextView
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sukses"
                    android:layout_alignParentRight="true"
                    android:text="Rp.0000000"
                    style="@style/CodeFont"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order"
                    android:text="Harga Sapi"
                    style="@style/CodeFont"/>

                <TextView
                    android:id="@+id/harga_sapi_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order"
                    android:layout_alignParentRight="true"
                    android:text="Rp.0000000"
                    style="@style/CodeFont"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/harga_sapi_3"
                    android:background="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:text="Total Harga"
                    style="@style/CodeFont"/>

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_alignParentRight="true"
                    android:text="Rp.0000000"
                    style="@style/CodeFont"/>
            </RelativeLayout>

            <TextView
                    android:id="@+id/transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/total"
                    android:textAlignment="center"
                    android:text="Silahkan Transfer ke Salah Satu Rekening Kami"
                    style="@style/CodeFont"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/rek1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/transfer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="8dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bni"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="12 135425865798351"
                            android:gravity="center_vertical|center_horizontal"
                            style="@style/CodeFont"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/rek2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/rek1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="8dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bri"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="19851 978145 71931"
                            android:gravity="center_vertical|center_horizontal"
                            style="@style/CodeFont"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/batas_tf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batas Transfer"
                    android:layout_below="@id/rek2"
                    style="@style/CodeFont"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/back_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Kembali ke home"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:background="#FF9800"/>
</RelativeLayout>
